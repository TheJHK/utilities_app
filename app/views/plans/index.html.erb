<h1>Listing plans</h1>
<%= link_to "Sign up now!", '/signup', class: "btn-signup" %>

<table>
  <tr>
    <th>Company name</th>
    <th>Zip</th>
    <th>Details</th>
    <th>Plan type</th>
    <th>Extended details</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.company_name %></td>
    <td><%= plan.zip %></td>
    <td><%= plan.details %></td>
    <td><%= plan.plan_type %></td>
    <td><%= plan.extended_details %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Plan', new_plan_path %>
